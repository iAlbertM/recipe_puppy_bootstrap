<h1>Recipes for <%= @search %> </h1>
<h2>Search results:</h2>

<table role="table">
	<thead role="rowgroup">
		<tr role="row">
			<th role="columnheader">Photo</th>
			<th role="columnheader">Title</th>
			<th role="columnheader">Ingredients</th>
		</tr>
	</thead>
	<tbody>

		<% @recipes.each do |recipe| %>
		<tr>
			<%= sanitize recipe %>
			<td role="cell" data-label="Image"><%= link_to image_tag(recipe["thumbnail"], size: "70x50"), recipe["href"] %>
			</td>
			<td role="cell" data-label="Title"><%= link_to recipe["title"], recipe["href"] %>
			</td>
			<td role="cell" data-label="Ingredients"><%= recipe["ingredients"] %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>