<h1>Recipes for <%= @search %> </h1>
<h2>Searched for: "<%= @search %>"</h2>

<table>
	<thead>
		<tr>
			<th>Image</th>
			<th>Title</th>
			<th>Ingredients</th>
			<th colspan=3 ></th>
		</tr>
	</thead>
	<tbody>
		<% @recipes.each do |recipe| %>
		<tr>
			<td><%= link_to image_tag(recipe["thumbnail"]), recipe["href"] %></td>
			<td><%= link_to recipe["title"], recipe["href"] %></td>
			<td><%= recipe["ingredients"] %></td>
		</tr>
	<% end %>
	</tbody>
</table>